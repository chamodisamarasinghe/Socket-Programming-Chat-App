               <font>
                  <Font name="System Bold" size="20.0" />
               </font></TextField>
            <ImageView fitHeight="39.0" fitWidth="41.0" layoutX="772.0" layoutY="696.0" onMouseClicked="#handleSendEvent" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assets/icons8-sent-24.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="33.0" fitWidth="39.0" layoutX="565.0" layoutY="700.0" onMousePressed="#selectImage" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assets/icons8-camera-50.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="33.0" fitWidth="39.0" layoutX="110.0" layoutY="700.0" onMousePressed="#selectImage" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assets/icons8-anime-emoji-50.png" />
               </image>
            </ImageView>
         </children>
      </Pane>
   </children>
